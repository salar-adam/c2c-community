
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to collections needed for the app to display data.
    // Writes are disallowed from the client-side for security.
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if false;
    }

    match /expert-questions/{questionId} {
      allow read: if true;
      allow write: if false;
    }

    match /resources/{resourceId} {
      allow read: if true;
      allow write: if false;
    }

    match /rock-vault-samples/{sampleId} {
      allow read: if true;
      allow write: if false;
    }

    // Disallow reads/writes to other collections by default.
    // Server-side admin actions will still have access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
