rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to community posts, resources, and expert questions
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    match /resources/{resourceId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes for now
    }

    match /expert-questions/{questionId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can ask
    }
    
    // Allow logged-in users to manage their own rock vault samples
    match /rock-vault-samples/{sampleId} {
       allow read, write: if request.auth != null;
    }

    // Disallow reads/writes to other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
