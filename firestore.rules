rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for most collections
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes for now
    }
    
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if false;
    }

    match /expert-questions/{questionId} {
      allow read: if true;
      allow write: if false;
    }

    match /rock-vault-samples/{sampleId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow writes only for join requests, which is a specific action
    match /join-requests/{requestId} {
      allow read: if false; // No one should read these
      allow create: if true; // Allow anyone to create a join request
      allow update, delete: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
