rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to most collections
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if false; // Block client-side writes for now
    }

    match /resources/{resourceId} {
      allow read: if true;
      allow write: if false;
    }

    match /expert-questions/{questionId} {
      allow read: if true;
      allow write: if false;
    }

    match /rock-vault-samples/{sampleId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow writes only for specific actions like submitting a form
    match /join-requests/{requestId} {
      allow read: if false; // Nobody should be able to read these
      allow create: if true; // Allow anyone to submit a join request
    }
  }
}
